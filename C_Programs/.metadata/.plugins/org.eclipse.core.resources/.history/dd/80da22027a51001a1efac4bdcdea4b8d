#include<stdio.h>

typedef struct book
{
	char name[20];
	int id;
	float price;
}book_t;

void book_data(book_t *b)
{
	printf("\nEnter Book name	:");
	scanf("%s",b->name);
	printf("Enter Book id	:");
	scanf("%d",&b->id);
	printf("Enter Book price	:");
	scanf("%f",&b->price);
}
void accept_record(book_t *b,int size)
{
	int i;
	for(i=0;i<size;i++)
		book_data(&b[i]);
}
void print_record(book_t *b,int size)
{
	int i;
	for(i=0;i<size;i++)
		printf("\nBook name %s \nBook id %d\nBook price %f",b->name,b->id,b->price);
}
int compare_name(const book_t *b1,const book_t *b2)
{
	return strcmp(b1->name,b2->name);
}
int main()
{
	book_t b[3];
	accept_record(b,3);
	print_record(b,3);
    qsort(b,3,sizeof(book_t),compare_name);
    print_record(b,3);
	return 0;
}
